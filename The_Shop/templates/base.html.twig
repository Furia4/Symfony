<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Cake Shop!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet">
            <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
        {% endblock %}
    </head>
    <body>
        <div>
            <div id="inicio">
                <img src="{{ asset('imagens/cake-logo.png') }}" class="logo">
            </div>
            <div class="color">
                <ul>
                    <li><a class="active" href="{{ path('home') }}">Inicio</a></li>
                    <li><a href="{{ path('shop',{slug: 'realizar-encomenda'}) }}">Encomendas</a></li>
                    <li><a href="{{ path('contactos') }}">Contactos</a></li>
                    <li style="float:right"><a href="{{ path('email') }}">Email</a></li>
                </ul>
            </div>
            {% block body %}{% endblock %}
        </div>
        <div id="contact">
            <h3>Isabel Silva <strong>|</strong> isabel.6.066@gmail.com</h3>
        </div>
        {% block javascripts %}
            <script src="{{ asset('js/blog.js') }}"></script>
        {% endblock %}
    </body>
</html>
